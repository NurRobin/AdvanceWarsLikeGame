<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.nurrobin.controller.GameController">
    <center>
        <Pane fx:id="gameBoard" />
    </center>
    <top>
        <HBox spacing="20" alignment="center">
            <Label fx:id="roundLabel" text="Round: 1" />
            <Label fx:id="playerLabel" text="Player: 1" />
            <Label fx:id="mapNameLabel" text="Map: Default" />
        </HBox>
    </top>
    <bottom>
        <VBox spacing="20" alignment="center">
            <Label fx:id="unitNameLabel" text="Unit: Soldier" />
            <Label fx:id="unitHealthLabel" text="HP: 100" />
        </VBox>
        <HBox spacing="20" alignment="center">
            <Button text="End Turn" onAction="#nextTurn" />
            <Label fx:id="unitHealthLabel" text="Health: 10/10" />
            <Label fx:id="unitMovementLabel" text="Movement: 5/5" />
        </HBox>
    </bottom>
</BorderPane>
